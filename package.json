{
  "name": "pavlenko-tech-blog",
  "version": "1.0.0",
  "description": "Технический блог на Markdown",
  "private": true,
  "scripts": {
    "start": "npx serve -s",
    "update-index": "node scripts/generate-index.js",
    "generate-static": "node scripts/generate-static.js",
    "build": "npm run update-index && npm run generate-static",
    "deploy": "npm run build && git add . && git commit -m 'Update content' && git push"
  },
  "keywords": [
    "blog",
    "markdown",
    "static-site"
  ],
  "author": "Pavlenko",
  "license": "MIT",
  "devDependencies": {
    "gray-matter": "^4.0.3",
    "marked": "^5.1.2",
    "serve": "^14.2.1"
  }
}
